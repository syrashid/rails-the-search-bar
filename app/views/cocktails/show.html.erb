<h1>Sweet Tits Show  Page</h1>


<h1><%= @cocktail.name %></h1>

<img src="<%= @cocktail.photo %>" alt="cocktail photo">
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %>
    <%= dose.ingredient.name %>
    <% if current_user == @cocktail.user %>
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  %>
          </%>
    <% end %>
    </p>
<% end %>

<% if current_user == @cocktail.user %>
  <h1>Add an Ingredient</h1>
  <%= render 'shared/dose_form' %>
<% end %>
<% @cocktail.reviews.each do |review| %>
  <p><%= review.text %></p>
  <p><%= review.rating %></p>
<% end %>

<%= render 'shared/review_form' %>

<%= link_to 'Download Drink',  api_v1_cocktail_path(@cocktail), class: "btn btn-primary mt-4" %>


