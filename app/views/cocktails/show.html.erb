<h1>Sweet Tits Show  Page</h1>


<h1><%= @cocktail.name %></h1>

<img src="<%= @cocktail.photo %>" alt="cocktail photo">
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  %>
        </%>
    </p>
<% end %>

<h1>Add an Ingredient</h1>
<%= simple_form_for [@cocktail, @dose] do |f|%>
        <%= f.input :description, :label_html => { :class => 'form-label' } %>
        <%= f.association :ingredient, collection: Ingredient.order('name ASC'), input_html: { class: 'select2' }, :label_html => { :class => 'form-label' } %>
        <%= f.submit "Add Ingredient", class: "btn btn-dark btn-lg" %>
<% end %>

<% @cocktail.reviews.each do |review| %>
  <p><%= review.text %></p>
  <p><%= review.rating %></p>
<% end %>

<%= render 'shared/review_form' %>
