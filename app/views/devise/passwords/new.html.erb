<div class="standard-container">

  <h1 class="standard-label">Forgot Your &nbspPassword?</h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { class: 'form-arcade-input mt-4' },
                  label: false,
                  placeholder: 'Email'
                  %>
    </div>

    <div class="form-actions">
      <%= f.submit "RESET PASSWORD",class: "arcade-btn stretch-btn mt-3" %>
    </div>
  <% end %>
</div>
