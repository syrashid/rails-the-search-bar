<div class="standard-container">

  <h1 class="standard-label">Log In</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { class: 'form-arcade-input mt-4' },
                  label: false,
                  placeholder: 'Email'
                  %>
      <%= f.input :password,
                  required: false,
                  input_html: { class: 'form-arcade-input mt-4' },
                  label: false,
                  placeholder: 'Password' %>
    </div>

    <div class="form-actions">
      <%= f.submit "LOG IN",class: "arcade-btn stretch-btn mt-3" %>
    </div>
  <% end %>

  <div class="login">
    <%= link_to "FORGOT PASSWORD!", new_password_path(resource_name), class: "arcade-btn stretch-btn mt-3" %>
  </div>
</div>
